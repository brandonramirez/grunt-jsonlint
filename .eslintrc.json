{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "comma-dangle": [ "error", "never" ],
        "array-bracket-spacing": [ "error", "always" ],
        "brace-style": [ "error", "stroustrup" ],
        "no-plusplus": [ "off" ],
        "no-use-before-define": [ "off" ]
    }
}